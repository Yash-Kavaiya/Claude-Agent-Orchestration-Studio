# Application Settings
APP_NAME=Claude Agent Orchestration Studio
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# API Settings
API_V1_PREFIX=/api/v1

# Database Settings
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/claude_orchestration
DATABASE_POOL_SIZE=50
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# Redis Settings
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=50

# Security Settings
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings (comma-separated list)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
OTP_RATE_LIMIT=5
OTP_RATE_LIMIT_WINDOW=900

# OTP Settings
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=5

# AI Service Settings
CLAUDE_API_KEY=your-claude-api-key-here
DEFAULT_AI_MODEL=claude-3-5-sonnet-20241022
MAX_TOKENS=4096
DEFAULT_TEMPERATURE=0.7

# Email Settings
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key-here
EMAIL_FROM=noreply@claude-orchestration.com
EMAIL_FROM_NAME=Claude Orchestration Studio

# SMTP Settings (if using SMTP instead of SendGrid)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# File Storage Settings
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1
MAX_FILE_SIZE=10485760
ALLOWED_FILE_EXTENSIONS=.pdf,.txt,.json,.csv,.md,.py,.js,.ts

# Web Integration Settings
JINA_SERP_API_KEY=your-jina-serp-api-key
JINA_READER_API_KEY=your-jina-reader-api-key

# Image Generation Settings
OPENAI_API_KEY=your-openai-api-key-for-dalle
STABILITY_API_KEY=your-stability-api-key

# Monitoring Settings
SENTRY_DSN=your-sentry-dsn-url
PROMETHEUS_PORT=9090

# Celery Settings
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=3600

# Development Mode (bypass OTP, etc.)
DEV_MODE=false
